{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    //"isShellCommand": true,
    //"showOutput": "always",
    "command": "go",
    "echoCommand": true ,
    "options": {
        "cwd": "${fileDirname}"
    },
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "args": [
                "build",
                "-x"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}